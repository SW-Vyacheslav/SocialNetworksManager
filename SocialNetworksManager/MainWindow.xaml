<Window x:Class="SocialNetworksManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocialNetworksManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500" WindowState="Maximized">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Settings">
                <MenuItem x:Name="but_refreshExtensions" Header="Refresh Extensions"></MenuItem>
            </MenuItem>
        </Menu>
        <StackPanel x:Name="socialNetworksHolder" DockPanel.Dock="Left" Margin="5" Width="100"></StackPanel>
        <StackPanel x:Name="methodsHolder" DockPanel.Dock="Right" Margin="5" Width="100"></StackPanel>
        <TextBox x:Name="text_output" Margin="5" MaxLength="1000"/>
    </DockPanel>
</Window>
