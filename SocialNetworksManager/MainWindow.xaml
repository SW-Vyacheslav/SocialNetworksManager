<Window x:Class="SocialNetworksManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocialNetworksManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Settings">
                <MenuItem x:Name="but_refreshExtensions" Header="Refresh Extensions"></MenuItem>
            </MenuItem>
            <MenuItem Header="Methods">
                <MenuItem Header="Vk Methods">
                    <MenuItem x:Name="but_getvkFriends" Header="VK Friends"></MenuItem>
                    <MenuItem x:Name="but_getvkPhotos" Header="Vk Photos"></MenuItem>
                    <MenuItem x:Name="but_sendvkMessage" Header="Vk Send Message"></MenuItem>
                </MenuItem>
                <MenuItem Header="Facebook Methods">
                    <MenuItem x:Name="but_getfbFriends" Header="Facebook Friends"></MenuItem>
                </MenuItem>
            </MenuItem>
        </Menu>
        <StackPanel x:Name="socialNetworksHolder" DockPanel.Dock="Left" Margin="5" Width="100"></StackPanel>
        <DockPanel x:Name="controlHolder">
            <Label DockPanel.Dock="Top" x:Name="lbl_info"></Label>
            <Grid DockPanel.Dock="Bottom" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" HorizontalContentAlignment="Center">Message:</Label>
                <TextBox  x:Name="txt_msg" Grid.Column="1" VerticalContentAlignment="Center"></TextBox>
            </Grid>
            <ListView x:Name="friendsList" Visibility="Collapsed" Margin="5">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Path=ID}"></GridViewColumn>
                        <GridViewColumn Header="First Name" DisplayMemberBinding="{Binding Path=First_Name}"></GridViewColumn>
                        <GridViewColumn Header="Last Name" DisplayMemberBinding="{Binding Path=Last_Name}"></GridViewColumn>
                        <GridViewColumn Header="Online" DisplayMemberBinding="{Binding Path=Online}"></GridViewColumn>
                        <GridViewColumn Header="Deactivated" DisplayMemberBinding="{Binding Path=Deactivated}"></GridViewColumn>
                    </GridView>
                </ListView.View>
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Send Message" Click="MenuItem_Click"></MenuItem>
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>
            <ListView x:Name="photosList" Visibility="Collapsed" Margin="5">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Width="75" Height="75" Source="{Binding Path=img}"></Image>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>
    </DockPanel>
</Window>
