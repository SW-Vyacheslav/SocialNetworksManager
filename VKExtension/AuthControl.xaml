<UserControl x:Class="VkExtension.AuthControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VkExtension"
             mc:Ignorable="d" d:DesignWidth="300" Height="80">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0">Email or Phone:</Label>
        <Label Grid.Column="0" Grid.Row="1">Password:</Label>
        <TextBox x:Name="login" Grid.Column="1" Grid.Row="0"  VerticalContentAlignment="Center"></TextBox>
        <PasswordBox x:Name="password" Grid.Column="1" Grid.Row="1"  VerticalContentAlignment="Center"></PasswordBox>
        <Button Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Width="100" Margin="1" Click="Button_LogIn_Click">Log in</Button>
    </Grid>
</UserControl>
